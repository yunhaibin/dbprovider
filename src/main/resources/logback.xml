	</logger>
	<logger name="com.ibatis">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.zookeeper">
		<level value="INFO" />
	</logger>
	 -->
	<!-- sql日志打印输出  -->
	<!-- logger name="p6spy" level="INFO" additivity="true">  
	    <appender-ref ref="P6spySql"/>  
	</logger> -->

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>